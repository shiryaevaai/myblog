@model EpamTask.MyBlog.WebInterface.Models.CommentModel

@{
    ViewBag.Title = "EditComment";
}

<h2>Редактировать комментарий</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        
        @Html.HiddenFor(model => model.PostID)
        @Html.HiddenFor(model => model.AuthorID)
        @Html.HiddenFor(model => model.CommentCreationTime)
      

        <div class="form-group">
            @Html.LabelFor(model => model.CommentText, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.CommentText, new { @class = "col-md-8" })
                @Html.ValidationMessageFor(model => model.CommentText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Принять изменения" class="btn btn-default" />
            </div>
        </div>
    </div>
}

