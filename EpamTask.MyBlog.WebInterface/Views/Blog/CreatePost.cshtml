@model EpamTask.MyBlog.WebInterface.Models.BlogPostModel

@{
    ViewBag.Title = "CreatePost";   
}

<h2>Создание поста</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.AuthorID)

        <div class="form-group">
            @Html.LabelFor(model => model.PostTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.PostTitle)
                @Html.ValidationMessageFor(model => model.PostTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostContent, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.PostContent, new { @class = "col-md-10" })
                @Html.ValidationMessageFor(model => model.PostContent)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Privacy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Privacy)
                @Html.ValidationMessageFor(model => model.Privacy)
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}