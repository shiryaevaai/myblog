@model System.Guid

<h2>Загрузить аватар</h2>

@using (Html.BeginForm("UploadImage", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = Model }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="file" name="image" class="btn btn-default" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" value="Загрузить файл" class="btn btn-default" />
            </div>
        </div>
    </div>
}
